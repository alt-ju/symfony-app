{% extends 'base.html.twig' %}

{% block title %}Test Technique - Tasks{% endblock %}

{% block body %}

    <div class="container">

        <div class="box">
            {% for message in app.flashes('success')%}
                <div class="box-message">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="box-btn">
                <a href="{{path('new_task')}}" class="btn">Ajouter une t√¢che</a>
            </div>
        </div>

        <div class="scroll">
            <table>
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Statut</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for task in tasks %}
                        <tr>
                            <td><a href="">{{ task.title }}</a></td>
                            <td><p>{{ task.status }}</p></td>
                            <td><a href="{{path('update_task', {id: task.id})}}">Modifier</a></td>
                            <td><a href="{{path('delete_task', {id: task.id})}}">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table> 
        </div>
    </div>
    
{% endblock %}
