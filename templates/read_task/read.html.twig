{% extends 'base.html.twig' %}

{% block title %}Test Technique - Visualiser le détail d'une tâche{% endblock %}

{% block body %}

    <div class="container">

        <div class="container-create">
            <div class="flex">
            <h1>{{ task.title}}</h1>
            <div>
                <a href="{{ path('tasks') }}" class="btn btn-retour">Retour</a>
            </div>  
        </div>
        <div class="text">
            <p>{{ task.description}}</p>
            <p>Statut : {{ task.status}}</p>
        </div>
    </div>
    
    
{% endblock %}
